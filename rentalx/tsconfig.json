{
  "compilerOptions": {
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ],
    "target": "es2016",                                 
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                  
    "module": "commonjs",                               
    "baseUrl": "./src",                                  
    "paths": {
      "@modules/*":["modules/*"],
      "@config/*":["config/*"],
      "@errors/*":["errors/*"],
      "@utils/*":["modules/*"],
      "@shared/*":["shared/*"]  
    },
    "resolveJsonModule": true,                        
    "esModuleInterop": true,                                                     
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true                
  }
}